<p id="notice"><%= notice %></p>

<h1>Properties</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Order</th>
      <th>Name</th>
      <th>Property Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.project.name %></td>
        <td><%= property.order %></td>
        <td><%= property.name %></td>
        <td>
          <% unless property.property_type.nil? %>
            <%= property.property_type.name %>
          <% end %>
        </td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

